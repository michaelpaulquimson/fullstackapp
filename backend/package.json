{
  "name": "koa-backend",
  "version": "1.0.1",
  "main": "dist/app.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --watch src --ext ts --exec 'npm run build && node dist/app.js'",
    "test": "jest",
    "test:all": "npm run test",
    "initdb": "bash ./run-migration.sh ./config/init.sql",
    "db:migrate": "bash ./run-all-migrations.sh ./migrations",
    "db:verify:all": "bash ./verify-all-tables.sh",
    "build:docker": "docker-compose down && docker-compose up --build"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@types/koa": "^2.13.6",
    "@types/koa__router": "^8.0.7",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "nodemon": "^3.1.0",
    "pg": "^8.11.3",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^20.19.1",
    "@types/pg": "^8.10.5",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1"
  }
}
